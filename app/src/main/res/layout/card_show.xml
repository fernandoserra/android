<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/m5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/showProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/showArtworkUrl100"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"/>
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/textArtistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="nombre de la banda"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/textTrackName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="trackName"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/idPLayIcon"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_detail"
                android:background="@null"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:tint="@color/coloSecondary"
                android:src="@drawable/ic_action_playback_play"/>

            <ImageButton
                android:id="@+id/idFavorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_detail"
                android:background="@null"
                android:paddingLeft="18dp"
                android:paddingRight="8dp"
                android:tint="@color/coloSecondary"
                android:src="@drawable/ic_favorite"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>